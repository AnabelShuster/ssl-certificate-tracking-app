@page
@model SSLCertificateTrackingWebApp.Pages.CertificateCategories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Certificate Category</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CertificateCategory[0].CertificateCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CertificateCategory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CertificateCategoryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CertificateCategoryID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CertificateCategoryID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CertificateCategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
