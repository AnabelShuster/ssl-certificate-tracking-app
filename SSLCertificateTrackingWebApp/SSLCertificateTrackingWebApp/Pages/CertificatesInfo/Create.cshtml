@page
@model SSLCertificateTrackingWebApp.Pages.CertificatesInfo.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 > Create Certificate Information</h1 >
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CertificateInfo.WorkOrderNumber" class="control-label"></label>
                <input asp-for="CertificateInfo.WorkOrderNumber" value="@Model.RandomWorkOrderNumberNew" readonly class="form-control" />
                <span asp-validation-for="CertificateInfo.WorkOrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.CertificateCategoryID" class="control-label"></label>
                <select name="CertificateInfo.CertificateCategoryID" asp-items="Model.CertificateCategoryList">
                    <option value="">---Select Certificate Category---</option>
                </select>
                <span asp-validation-for="CertificateInfo.CertificateCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.CertificateExpirationDate" class="control-label"></label>
                <input asp-for="CertificateInfo.CertificateExpirationDate" class="form-control" />
                <span asp-validation-for="CertificateInfo.CertificateExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.CertificateName" class="control-label"></label>
                <input asp-for="CertificateInfo.CertificateName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.CommonName" class="control-label"></label>
                <input asp-for="CertificateInfo.CommonName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.CertificateTemplate" class="control-label"></label>
                <input asp-for="CertificateInfo.CertificateTemplate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.Hosted" class="control-label"></label>
                <input asp-for="CertificateInfo.Hosted" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.SubjectAlternativeNames" class="control-label"></label>
                <input asp-for="CertificateInfo.SubjectAlternativeNames" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.CertificateType" class="control-label"></label>
                <input asp-for="CertificateInfo.CertificateType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.WebServer" class="control-label"></label>
                <input asp-for="CertificateInfo.WebServer" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.Organization" class="control-label"></label>
                <input asp-for="CertificateInfo.Organization" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.ServersInstalledOn" class="control-label"></label>
                <input asp-for="CertificateInfo.ServersInstalledOn" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.OperatingSystem" class="control-label"></label>
                <input asp-for="CertificateInfo.OperatingSystem" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.Department" class="control-label"></label>
                <input asp-for="CertificateInfo.Department" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.CertificateEffectiveDate" class="control-label"></label>
                <input asp-for="CertificateInfo.CertificateEffectiveDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.ApplicationName" class="control-label"></label>
                <input asp-for="CertificateInfo.ApplicationName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.Requester" class="control-label"></label>
                <input asp-for="CertificateInfo.Requester" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.IssuesBy" class="control-label"></label>
                <input asp-for="CertificateInfo.IssuesBy" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.ServerName" class="control-label"></label>
                <input asp-for="CertificateInfo.ServerName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.Notes" class="control-label"></label>
                <textarea asp-for="CertificateInfo.Notes" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.IssuedEmailAddress" class="control-label"></label>
                <input asp-for="CertificateInfo.IssuedEmailAddress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.ServerType" class="control-label"></label>
                <input asp-for="CertificateInfo.ServerType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.SpecialistWhoIssued" class="control-label"></label>
                <input asp-for="CertificateInfo.SpecialistWhoIssued" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CertificateInfo.CMCert" /> @Html.DisplayNameFor(model => model.CertificateInfo.CMCert)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CertificateInfo.DomainMember" /> @Html.DisplayNameFor(model => model.CertificateInfo.DomainMember)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.Approver" class="control-label"></label>
                <input asp-for="CertificateInfo.Approver" class="form-control" />
                <span asp-validation-for="CertificateInfo.Approver" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CertificateInfo.IssuedFromNewPKI" /> @Html.DisplayNameFor(model => model.CertificateInfo.IssuedFromNewPKI)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.Status" class="control-label"></label>
                <input asp-for="CertificateInfo.Status" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.RequestedDate" class="control-label"></label>
                <input asp-for="CertificateInfo.RequestedDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.ApprovedDate" class="control-label"></label>
                <input asp-for="CertificateInfo.ApprovedDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.DeclinedDate" class="control-label"></label>
                <input asp-for="CertificateInfo.DeclinedDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.RevokedDate" class="control-label"></label>
                <input asp-for="CertificateInfo.RevokedDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.ReplacedDate" class="control-label"></label>
                <input asp-for="CertificateInfo.ReplacedDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CertificateInfo.DiscoveredDate" class="control-label"></label>
                <input asp-for="CertificateInfo.DiscoveredDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
