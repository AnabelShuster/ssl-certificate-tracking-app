@page
@model SSLCertificateTrackingWebApp.Pages.CertificatesInfo.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Certificate Information</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<hr />
<form>
    <div class="row" style="display: flex;">
        <div class="column" style="margin-left: 15px">
            Work Order #: <input type="text" asp-for="WorkOrderNumberSearchString" onfocus="this.value=''" />
        </div>
        <div class="column" style="margin-left: 15px">
            Category: <input type="text" asp-for="CategorySearchString" onfocus="this.value=''" />
        </div>
        <div class="column" style="margin-left: 15px">
            Expires # of Days: <input type="text" asp-for="ExpireDateSearchString" onfocus="this.value=''">
            <input type="submit" value="Search" style="background-color: royalblue; color: white; border-radius: 4px; border:hidden; height:32px;width:70px" />
        </div>
    </div>
</form>
<br />
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Work Order #
                </th>
                <th>
                    Category
                </th>
                <th>
                    Certificate Name
                </th>
                <th>
                    Expiration Date
                </th>
                <th>
                    Notes
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NewCertificateInfoList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimalCertWorkOrderNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimalCategorySelectedName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimalCertName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimalCertExpireDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimalCertNotes)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.MinimalCertId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.MinimalCertId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.MinimalCertId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
